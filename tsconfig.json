{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "src",
    "declaration": true,
    "strictNullChecks": true,
    "paths": {
      "*": [
        "../node_modules/*",
        "*.ts"
      ]
    }
  },
  "exclude": ["tests", "dist", "IGNORE"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
